{
  "dependencies": {
    "cypress": "^15.9.0",
    "mochawesome": "^7.1.4",
    "mochawesome-report-generator": "^6.3.2"
  },
  "scripts": {
    "test": "yarn report:clean && cypress run; yarn report:make",
    "test:spec": "cypress run --spec",
    "cy:run": "cypress run",
    "test:prod": "yarn cy:run --env-file production.env.json",
    "report:clean": "rm -rf cypress/results final-report report.json",
    "report:make": "./node_modules/.bin/mochawesome-merge cypress/results/*.json > report_production.json && ./node_modules/.bin/marge report_production.json --reportDir ./final-report --reportFilename report_production.html",
    "routine:prod": "yarn report:clean && yarn test:prod; yarn report:make"
  },
  "devDependencies": {
 
    "mochawesome-merge": "4.3.0"
  }
}
